<config>
    <modules>
        <IV_NovaPoshta>
            <version>0.1.0</version>
        </IV_NovaPoshta>
    </modules>
    <global>
        <models>
            <novaposhta>
                <class>IV_NovaPoshta_Model</class>
                <resourceModel>novaposhta_resource</resourceModel>
            </novaposhta>
            <novaposhta_resource>
                <class>IV_NovaPoshta_Model_Resource</class>
                <entities>
                    <entity_area>
                        <table>novaposhta_entity_area</table>
                    </entity_area>
                    <entity_city>
                        <table>novaposhta_entity_city</table>
                    </entity_city>
                    <entity_warehouse>
                        <table>novaposhta_entity_warehouse</table>
                    </entity_warehouse>
                </entities>
            </novaposhta_resource>
            <directory_resource>
                <rewrite>
                    <region_collection>IV_NovaPoshta_Model_Resource_Directory_Region_Collection</region_collection>
                </rewrite>
            </directory_resource>
        </models>
        <blocks>
            <novaposhta>
                <class>IV_NovaPoshta_Block</class>
            </novaposhta>
        </blocks>
        <resources>
            <novaposhta_setup>
                <setup>
                    <module>IV_NovaPoshta</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </novaposhta_setup>
        </resources>
        <helpers>
            <novaposhta>
                <class>IV_NovaPoshta_Helper</class>
            </novaposhta>
        </helpers>
    </global>
    <default>
        <carriers>
            <novaposhta>
                <active>1</active>
                <model>novaposhta/carrier</model>
                <title>Novaposhta</title>
                <sort_order>10</sort_order>
                <sallowspecific>0</sallowspecific>
                <express_max_weight>1</express_max_weight>
            </novaposhta>
        </carriers>
    </default>
    <frontend>
        <routers>
            <novaposhta>
                <use>standard</use>
                <args>
                    <module>IV_NovaPoshta</module>
                    <frontName>novaposhta</frontName>
                </args>
            </novaposhta>
        </routers>
        <layout>
            <updates>
                <iv_novaposhta>
                    <file>novaposhta.xml</file>
                </iv_novaposhta>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <novaposhta before="Mage_Index_Adminhtml">IV_NovaPoshta_Adminhtml</novaposhta>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <iv_novaposhta>
                    <file>novaposhta.xml</file>
                </iv_novaposhta>
            </updates>
        </layout>
    </adminhtml>
</config>